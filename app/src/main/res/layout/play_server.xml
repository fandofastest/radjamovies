<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Lay_server"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#0DE6E6E6"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/serv1"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btnsplahs"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:text="Play Server 1"

                />
            <TextView
                android:id="@+id/serv2"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btnsplahs"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:text="Play Server 2"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/serv3"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btnsplahs"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:text="Play Server 3"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/serv4"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btnsplahs"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:text="Play Server 4"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/serv5"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btnsplahs"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:text="Play Server 5"
                android:visibility="gone"
                />


        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>